<div class="row">

            {% for product in products %}
                {% if product.category_id == 1 %}
                    <div class="col-md-4 my-4">
                        <div class="card h-100">
                            {% if product.photo == "" %}
                                <a href="#"><img class="card-img-top" src="/assets/images/products/placeholder-green.jpg" alt=""/></a>
                            {% else %}
                                <a href="#"><img class="card-img-top" src="{{product.photo}}" alt=""/></a>
                            {% endif %}
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">{{product.name}}</a>
                                </h4>
                                {# <h5>{{product.price}}</h5> #}
                                <form class="form-inline" action="https://www.paypal.com/cgi-bin/webscr" method="post">
                                    <input type="hidden" name="cmd" value="_xclick">
                                    <input type="hidden" name="business" value="spaescentials@gmail.com">
                                    <input type="hidden" name="item_name" value="{{product.name}}">
                                    <input type="hidden" name="item_number" value="Imoro-">
                                    {# <input type="hidden" name="amount" value="23.00"> #}
                                    <select class="form-control" name="amount">
                                        {# <option value="25">4oz $25</option>
                                        <option value="35">8oz $35</option> #}
                                        {% for item in product.price|split(",") %}
                                            <option value="{{ item | replace(r/^[^$]*/,'')|replace('$','') }}">{{item}}</option>
                                            {# <option value="{{ item | replace(r/\$.*/,'') }}">{{item}}</option> #}
                                        {% endfor %}
                                    </select>
                                
                                    <input type="hidden" name="currency_code" value="USD">
                                    <button type="submit" name="submit" class="btn btn-primary">Buy Now</button>
                                </form>
                                <p class="card-text">
                                    {{product.description}}
                                </p>
                            </div>
                            <div class="card-footer">
                                {# <a href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=ML2GMGR4SZZNN" class="btn btn-primary">Buy Now</a> #}
                               

                            {# <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
