<div class="row">

            {% for product in products %}
                {% if product.category_id == 1 %}
                    <div class="col-md-4 my-4">
                        <div class="card h-100">
                            {% if product.photo == "" %}
                                <a href="#"><img class="card-img-top" src="/assets/images/products/placeholder-green.jpg" alt=""/></a>
                            {% else %}
                                <a href="#"><img class="card-img-top" src="{{product.photo}}" alt=""/></a>
                            {% endif %}
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">{{product.name}}</a>
                                </h4>
                                <h5>{{product.price}}</h5>
                                <p class="card-text">
                                    {{product.description}}
                                </p>
                            </div>
                            <div class="card-footer">
                                {# <a href="#" class="btn btn-primary">Buy Now</a> #}
                                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                            <input type="hidden" name="cmd" value="_s-xclick">
                            {# <input type="hidden" name="hosted_button_id" value="ML2GMGR4SZZNN"> #}
                            <input type="hidden" name="business" value="spaescentials@gmail.com">
                            <input type="hidden" name="currency_code" value="USD">
                            <input type="hidden" name="amount" size="8">
                            <table>
                                <tr>
                                    <td><input type="hidden" name="on0" value="{{product.name}}">{{product.name}}</td>
                                </tr>
                                <tr>
                                    <td><input type="text" name="os0" maxlength="200"></td>
                                </tr>
                            </table>
                            {# <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!"> #}
                            {# <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1"> #}
                            <button type="submit" name="submit" class="btn btn-primary">
                                Buy Now
                                
                            </button>
                        </form>

                                <button type="button" class="openModal btn btn-secondary" value="{{product.id}}">Learn More</button>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>